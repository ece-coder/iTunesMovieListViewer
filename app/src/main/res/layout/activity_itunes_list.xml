<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto">




<LinearLayout
		android:orientation="vertical"
		android:layout_height="match_parent"
		android:layout_width="match_parent">

	<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="@color/colorPrimary"
			app:popupTheme="@style/AppTheme.AppBarOverlay">

		<ImageView
				android:id="@+id/logoXmarks"
				android:layout_margin="4dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:src="@mipmap/icon_appetiser_itunes_app" />

		<TextView
				android:layout_marginLeft="20dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:textSize="22sp"
				android:textStyle="bold"
				android:text="iTunes Movie List Viewer"/>
	</android.support.v7.widget.Toolbar>

	<android.support.design.widget.CoordinatorLayout
			android:background="@color/darkGray"
			xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:tools="http://schemas.android.com/tools"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".ituneslist.ItunesListActivity">

		<android.support.v4.widget.SwipeRefreshLayout
				android:id="@+id/swipe_layout"
				android:layout_width="match_parent"
				android:layout_height="match_parent">


			<android.support.v7.widget.RecyclerView
					android:id="@+id/itunes_recycler"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
					tools:listitem="@layout/list_tunes_item"/>



		</android.support.v4.widget.SwipeRefreshLayout>

	</android.support.design.widget.CoordinatorLayout>

</LinearLayout>

</layout>